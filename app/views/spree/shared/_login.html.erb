<%= form_for :user, :url => spree.user_session_path, :html => {:class => "cb-form"} do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :email, t(:email) %><br />
      <%= f.text_field :email, :class => 'title', :tabindex => 1 %>
    </p>
    <p>
      <%= f.label :password, t(:password) %><br />
      <%= f.password_field :password, :class => 'title', :tabindex => 2 %>
    </p>
  </div>
  <p>
    <label>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t(:remember_me) %>
    </label>
	<br/><br/>

  <p><a href="#" class="cf-button" id="sbtn">Войти</a></p>
<% end %>